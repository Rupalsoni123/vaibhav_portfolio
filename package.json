{
  "name": "my-portfolio",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "author": "Vaibhav Soni",
  "description": "DevOps Engineer Portfolio with advanced AI chatbot and accessibility features",
  "keywords": [
    "portfolio",
    "devops",
    "react",
    "ai-chatbot",
    "accessibility"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "portfolio": "vite",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "analyze": "npm run build && npx vite-bundle-analyzer",
    "docker:build": "docker build -t portfolio-app .",
    "docker:build:prod": "docker build -f Dockerfile.prod -t portfolio-app:prod .",
    "docker:run": "docker run -p 3000:3000 portfolio-app",
    "docker:run:prod": "docker run -p 3000:3000 portfolio-app:prod",
    "docker:compose:up": "docker-compose up --build",
    "docker:compose:up:prod": "docker-compose --profile production up --build",
    "docker:compose:down": "docker-compose down",
    "start": "vite preview --host 0.0.0.0 --port 3000"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.0.0",
    "framer-motion": "^11.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scroll": "^1.8.9",
    "react-type-animation": "^3.1.0"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.3",
    "vite": "^5.4.19",
    "vite-bundle-analyzer": "^0.7.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
